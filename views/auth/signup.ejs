<h2>Sign Up</h2>
<div class="row">
	<form action="/auth/signup" method="POST" class="col s12">
		<div class="row">
			<div class="col s6 input-field">
				<label for="firstname">First Name: </label>
				<input type="text" id="firstname" name="firstname" value="<%= previousData ? previousData.firstname : '' %>">
			</div>
			<div class="col s6 input-field">
				<label for="lastname">Last Name: </label>
				<input type="text" id="lastname" name="lastname" value="<%= previousData ? previousData.lastname : '' %>">
			</div>
		</div>
		<div class="row">
			<div class="col s12 input-field">	
				<label for="emailinput">Email: </label>
				<input type="email" id="emailinput" name="email" value="<%= previousData ? previousData.email : '' %>">
			</div>
		</div>
		<div class="row">
			<div class="col s12 input-field">
				<label for="username">Username: </label>
				<input type="text" id="username" name="username" value="<%= previousData ? previousData.username : '' %>">
			</div>
		</div>
		<div class="row">
			<div class="col s6 input-field">
				<label for="intialpassword">Password: </label>
				<input type="password" id="intialpassword" name="password">
			</div>
			<div class="col s6 input-field">
				<label for="passwordretype">Retype Password: </label>
				<input type="password" id="passwordretype" name="passwordretype">
			</div>
		</div>
		<div class="row">
			<div class="col s3 input-field">
				<label for="dob">Date of Birth: </label>
				<input type="text" id="dob" name="dob" class="datepicker" value="<%= previousData ? previousData.dob : '' %>">
			</div>
			<div class="col s9 input-field">
				<label for="image">Profile Picture URL: </label>
				<input type="url" id="image" name="image" value="<%= previousData ? previousData.image : '' %>">
			</div>
		</div>
		<div class="row">
			<div class="col s12 input-field">
				<label for="bio">Write Your Bio: </label>
				<textarea class="materialize-textarea" id="bio" name="bio"><%= previousData ? previousData.bio : '' %></textarea>
			</div>
		</div>
			<div class="row">
				<div class="col s12 input-field">
					<button class="btn waves-effect waves-light submitbtn" type="submit" name="action">Sign Up
    					<i class="material-icons right">send</i>
					</button>
				</div>
			</div>
		</div>
	</form>
</div>